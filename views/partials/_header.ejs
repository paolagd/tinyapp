<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <ul class="navbar-nav text-center">
      <li>
        <a class="nav-item nav-link" href="/urls">My URLs</a>
      </li>
      <li>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </li>
    </ul> 
    <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup"> 
      <% if(!user){ %> 
        <form action="/login" method="GET"> 
          <button class="btn btn-outline-light" type="submit">Log In</button>
        </form> 
        <form  style="margin-left: 10px;" action="/register" method="GET"> 
          <button class="btn btn-outline-light" type="submit">Register</button>
        </form>
      <% } else{ %>
        <h5 class="nav-item" style="padding: 10px; margin-top: 5px;">
          Logged in as : <%= user.email %>
        </h5> 
        <form action="/logout" method="POST"> 
          <button class="btn btn-outline-light" type="submit">Log Out</button>
        </form>
      <% } %> 
    </div>
  </nav>
</header>








